---
interface Props {
	title: string;
	description: string;
	autor: string;
	keywords: string;
}

const { title, description, autor, keywords } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image" href="/favicon.webp" />
		<meta name="generator" content={Astro.generator} />
		<meta name="keywords" content={keywords}>
		<meta name="author" content={autor}>
		<meta name="language" content="EspaÃ±ol">
		<meta name="robots" content="index, nofollow, noarchive, max-snippet-length=150">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			"Courier New",
			Courier,
			monospace;
		background-color: #fff;
		letter-spacing: -0.025rem;
		box-sizing: border-box;
	}
	body,
	figure,
	ul {
		margin: 0;
		padding: 0;
	}
	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
	}
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		margin: 0;
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}


	p {
		color: #555;
		font-size: 0.85rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;

	}
	html.dark {
		background-color: #111;
	}
	html.dark p {
		color: #ddd;
	}
</style>
