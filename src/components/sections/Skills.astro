---
import Section from "../Section.astro"
import { skills } from "@cv"
---

<Section title="Habilidades">
    <ul>
        {skills.map((skill) => (
        <li>
            <span>{skill.name}</span>
        </li>
        ))}
    </ul>
</Section>
<style>
    ul {
        display: inline-flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
    }
    li {
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: .8rem;
        font-weight: 500;
        padding: 0.2rem .6rem;
    }
    html.dark li {
        background: #333;
        color: white;
    }
</style>
