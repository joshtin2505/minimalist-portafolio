---
import Section from "../Section.astro"
import { projects } from "@cv"
---

<Section title="Projects">
    <ul>
        {projects.map(({description,highlights,name,url,github,isActive}) => (
        <li>
            <article>
                <header>
                    <h3>
                        <a href={url} title={`Ver el proyecto ${name}`}>
                            {name}
                        </a>
                        {isActive && <span>&bullet;</span>}
                    </h3>
                    <p>{description}</p>
                </header>
                <footer>
                    {
                        highlights.map(highlight => {
                            return <span>{highlight}</span>
                        })
                    }
                </footer>
            </article>
        </li>
        ))}
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }
    article {
        border-radius: .5rem;
        border: 1px solid #f2f2f2;
        gap: 1rem;
        display: flex;
        flex-direction: column;
        padding: 1rem;
        height: 100%;
    }
    article header {
        flex: 1;
    }
    article header h3 {
        margin-bottom: .5rem;
    }
    article header a {
        text-decoration: none;
        color: #111;
    }
    article header a:hover {
        text-decoration: underline;
    }
    article header p {
        font-size: .82rem;
        line-height: 1.2rem;
    }
    article footer {
        display: flex;
        flex-wrap: wrap;
        justify-content: start;
        align-items: center;
        gap: 4px;
    }
    article footer span {
        border-radius: .5rem;
        background: #eee;
        color: #777;
        font-size: .7rem;
        font-weight: 500;
        padding: .2rem .6rem;
    }
</style>